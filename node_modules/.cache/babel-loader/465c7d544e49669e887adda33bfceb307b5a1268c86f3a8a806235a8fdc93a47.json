onaEditada = Object.assign({}, persona);\r\n          this.editando = persona.id;\r\n        }, // editarPersona\r\n\r\n        guardarPersona(persona) {\r\n          if (!persona.nombre.length || !persona.apellido.length || !persona.email.length) {\r\n            return;  \r\n          }\r\n          this.$emit('actualizar-persona', persona.id, persona);\r\n          this.editando = null;\r\n        }, // guardarPersona\r\n\r\n        cancelarEdicion(persona) {\r\n          Object.assign(persona, this.personaEditada);\r\n          this.editando = null;\r\n        } // canelarEdicion\r\n\r\n      }, // methods\r\n\r\n    } // export default\r\n\r\n  </script>\r\n\r\n  <style scoped></style>"],"mappings":"AAyDI,eAAe;EAEb;EACAA,IAAI,EAAE,gBAAgB;EAEtB;EACAC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE;IACZ;EACF,CAAC;EAAE;;EAEH;EACAC,KAAK,EAAE;IACLC,QAAQ,EAAEC;EACZ,CAAC;EAAE;;EAGHC,OAAO,EAAE;IAEPC,aAAaA,CAACC,OAAO,EAAE;MACrB,IAAI,CAACC,cAAa,GAAIC,MAAM,CAACC,MAAM,CAAC,CAAC,CAAC,EAAEH,OAAO,CAAC;MAChD,IAAI,CAACN,QAAO,GAAIM,OAAO,CAACI,EAAE;IAC5B,CAAC;IAAE;;IAEHC,cAAcA,CAACL,OAAO,EAAE;MACtB,IAAI,CAACA,OAAO,CAACM,MAAM,CAACC,MAAK,IAAK,CAACP,OAAO,CAACQ,QAAQ,CAACD,MAAK,IAAK,CAACP,OAAO,CAACS,KAAK,CAACF,MAAM,EAAE;QAC/E;MACF;MACA,IAAI,CAACG,KAAK,CAAC,oBAAoB,EAAEV,OAAO,CAACI,EAAE,EAAEJ,OAAO,CAAC;MACrD,IAAI,CAACN,QAAO,GAAI,IAAI;IACtB,CAAC;IAAE;;IAEHiB,eAAeA,CAACX,OAAO,EAAE;MACvBE,MAAM,CAACC,MAAM,CAACH,OAAO,EAAE,IAAI,CAACC,cAAc,CAAC;MAC3C,IAAI,CAACP,QAAO,GAAI,IAAI;IACtB,EAAE;EAEJ,CAAC,CAAE;AAEL,GAAE"},"metadata":{},"sourceType":"module","externalDependencies":[]}